#include <bits/stdc++.h>
using namespace std;


int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	int t;
	cin >> t;
	while (t--) {
		long int n, a = 0, b = 0; string s;
		cin >> n >> s;
		for (long int i=0;i<n;i++) {
			if (s[i] == '(') a++;
			else b++;
		} cout << min(a,b)* 2 << "\n";
	}

	return 0;
}
